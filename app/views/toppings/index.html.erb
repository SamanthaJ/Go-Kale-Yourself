<p id="notice"><%= notice %></p>

<h1>Listing Toppings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Calories</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toppings.each do |topping| %>
      <tr>
        <td><%= topping.name %></td>
        <td><%= topping.price %></td>
        <td><%= topping.calories %></td>
        <td><%= topping.description %></td>
        <td><%= link_to 'Show', topping %></td>
        <td><%= link_to 'Edit', edit_topping_path(topping) %></td>
        <td><%= link_to 'Destroy', topping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

